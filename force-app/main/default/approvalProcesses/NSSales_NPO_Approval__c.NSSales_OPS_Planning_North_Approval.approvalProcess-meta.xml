<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>NSSales_Related_Opportunity__c</field>
        <field>NSSales_Approval_Type__c</field>
        <field>NSSales_Status__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>NSSales_OPS_Planning_North_Approver</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>OPS Planning North Approval Step</label>
        <name>NSSales_OPS_Planning_North_Approval_Step</name>
    </approvalStep>
    <description>Approval Process for OPS Planning North</description>
    <emailTemplate>NS_Sales_Email_Templates/NSSales_Notification_To_NPO_Queue</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>NSSales_NPO_Approval__c.NSSales_Approval_Type__c</field>
            <operation>equals</operation>
            <value>OPS Planning North</value>
        </criteriaItems>
        <criteriaItems>
            <field>NSSales_NPO_Approval__c.NSSales_Submit_for_Approval__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>NSSales_Approval_Timestamp</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>NSSales_Update_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>NSSales_Update_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>NSSales_Update_Submit_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>OPS Planning North Approval</label>
    <recallActions>
        <action>
            <name>NSSales_Status_Update</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
