<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CheckForActiveContact</fullName>
    <active>true</active>
    <description>Check the Case contact is a Active contact, but only for users that are Context users</description>
    <errorConditionFormula>AND(
NOT( $User.NS_Context_User__c ),
(ISPICKVAL( Contact.NS_ContactStatus__c , &#39;Inactive&#39;) )
)</errorConditionFormula>
    <errorDisplayField>ContactId</errorDisplayField>
    <errorMessage>Cannot enter inactive contacts</errorMessage>
</ValidationRule>
