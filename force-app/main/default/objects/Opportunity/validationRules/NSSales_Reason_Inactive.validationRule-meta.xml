<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NSSales_Reason_Inactive</fullName>
    <active>false</active>
    <errorConditionFormula>AND( ISPICKVAL(StageName, &quot;Inactive&quot;), 
ISBLANK(TEXT( NS_Lost_Cancelled_Reason__c )))</errorConditionFormula>
    <errorDisplayField>NS_Lost_Cancelled_Reason__c</errorDisplayField>
    <errorMessage>You must provide a reason why the Opportunity was set to stage &quot;Inactive&quot; in the &quot;Lost/Cancelled Reason&quot; Field.</errorMessage>
</ValidationRule>
