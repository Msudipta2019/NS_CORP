<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NSSales_vrIntermodal1000</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
ISPICKVAL(NS_Originating_Department__c,&#39;Intermodal&#39;), 
NS_Estimated_Volume__c &lt;= 1000, 
ISPICKVAL(StageName,&#39;Internal Review&#39;), 
ISCHANGED(StageName) 
)</errorConditionFormula>
    <errorMessage>Intermodal Opportunites with a volume less than or equal to 1000 should not be moved to the &quot;Internal Review&quot; stage. Please proceed with the &quot;Proposal&quot; stage.</errorMessage>
</ValidationRule>
