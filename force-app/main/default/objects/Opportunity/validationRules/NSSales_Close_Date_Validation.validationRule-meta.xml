<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NSSales_Close_Date_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(PRIORVALUE(StageName),&#39;Proposal&#39;), ISCHANGED(StageName),(NSSales_NPO_Final_Decision_Date__c + NSSales_Lead_Time__c  &gt;  CloseDate) )</errorConditionFormula>
    <errorMessage>Opportunity close date should be on or after lead time from the date of NPO Decision.</errorMessage>
</ValidationRule>
