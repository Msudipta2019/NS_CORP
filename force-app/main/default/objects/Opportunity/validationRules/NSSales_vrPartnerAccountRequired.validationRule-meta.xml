<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NSSales_vrPartnerAccountRequired</fullName>
    <active>true</active>
    <description>It enforces user to select a Partner Account  whenever a Partner Account Type is selected.</description>
    <errorConditionFormula>OR(
AND(NOT(ISPICKVAL(NS_Partner_Account_Type_1__c, &#39;&#39;) ) , ISBLANK(NS_Partner_Account_1__c) ) ,
AND(NOT(ISPICKVAL(NS_Partner_Account_Type_2__c, &#39;&#39;) ) , ISBLANK(NS_Partner_Account_2__c) ) ,
AND(NOT(ISPICKVAL(NS_Partner_Account_Type_3__c, &#39;&#39;) ) , ISBLANK(NS_Partner_Account_3__c) ) ,
AND(NOT(ISPICKVAL(NS_Partner_Account_Type_4__c, &#39;&#39;) ) , ISBLANK(NS_Partner_Account_4__c) ))</errorConditionFormula>
    <errorMessage>Please select a Partner Account</errorMessage>
</ValidationRule>
