<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NSSales_vrPartnerAccountTypeRequired</fullName>
    <active>true</active>
    <description>It enforces user to select a Partner Account Type whenever a Partner Account is selected.</description>
    <errorConditionFormula>OR( AND(NOT(ISBLANK(NS_Partner_Account_1__c)),ISPICKVAL(NS_Partner_Account_Type_1__c, &#39;&#39;)),
AND(NOT(ISBLANK(NS_Partner_Account_2__c)),ISPICKVAL(NS_Partner_Account_Type_2__c, &#39;&#39;)),
AND(NOT(ISBLANK(NS_Partner_Account_3__c)),ISPICKVAL(NS_Partner_Account_Type_3__c, &#39;&#39;)),
AND(NOT(ISBLANK(NS_Partner_Account_4__c)),ISPICKVAL(NS_Partner_Account_Type_4__c, &#39;&#39;)))</errorConditionFormula>
    <errorMessage>Please select a Partner Account Type</errorMessage>
</ValidationRule>
