<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NSSales_vrRequireAccountForSourceAccount</fullName>
    <active>true</active>
    <description>It mandates user to fill in the Account field when Source is &quot;Account&quot;</description>
    <errorConditionFormula>AND(
ISCHANGED(Source__c) ,
ISPICKVAL(Source__c ,&quot;Account&quot;),
ISBLANK( Account__c )
)</errorConditionFormula>
    <errorDisplayField>Account__c</errorDisplayField>
    <errorMessage>Complete this field.</errorMessage>
</ValidationRule>
