<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>NS_Email_New_Owner_of_LeaD</fullName>
        <description>Email New Owner of Lead</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>DefaultWorkflowUser</senderType>
        <template>NS_Sales_Email_Templates/NSLeadsNewassignmentnotification</template>
    </alerts>
    <rules>
        <fullName>NSSales_wr_Email for Lead Owner Change</fullName>
        <actions>
            <name>NS_Email_New_Owner_of_LeaD</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Send email notification to new lead owner</description>
        <formula>PRIORVALUE(OwnerId) &lt;&gt;  OwnerId</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
